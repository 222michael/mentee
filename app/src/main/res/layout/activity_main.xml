<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/caldoMichaelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="420dp"
            android:height="120dp"
            android:background="@drawable/rectangle"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="87dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile" />

        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caldoMichaelText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caldo Michael"
                android:textSize="20sp"
                android:textColor="#DADADA" />

            <ImageView
                android:id="@+id/prof"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/edit"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/profileLayout"
            android:layout_marginTop="40dp"
            android:id="@+id/Darkmode">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/darkmode"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark Mode"
                android:textSize="17sp"
                android:textColor="#DADADA"
                android:layout_gravity="center_vertical"/>

            <Switch
                android:id="@+id/switchButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:thumbTint="@color/white"
                android:trackTint="@color/white"
                android:layout_marginLeft="230dp" />




        </LinearLayout>
        <View
            android:id="@+id/sep1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_below="@+id/Darkmode"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/sep1"
            android:id="@+id/Preference">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/username"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="17sp"
                android:textColor="#DADADA"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter text"
                android:inputType="text"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                android:text="czzzon"
                android:textColor="#DADADA"
                android:background=""
                android:alpha=".3"
                android:layout_marginLeft="170dp"/>




        </LinearLayout>
        <View
            android:id="@+id/sep2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_below="@+id/Preference"
            android:layout_marginTop="5dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/sep2"
            android:layout_marginTop="5dp"
            android:id="@+id/Pref">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/preference"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="preference"
                android:textSize="17sp"
                android:textColor="#DADADA"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/arrow"
                android:layout_marginTop="5dp"
                android:layout_marginStart="245dp" />



        </LinearLayout>
        <View
            android:id="@+id/sep3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_below="@+id/Pref"
            android:layout_marginTop="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/sep3"
            android:id="@+id/not">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/notification"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification and Sound"
                android:textSize="17sp"
                android:textColor="#DADADA"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/arrow"
                android:layout_marginTop="10dp"
                android:layout_marginStart="155dp" />



        </LinearLayout>
        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:id="@+id/sep4"
            android:layout_below="@+id/not"
            android:layout_marginTop="5dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/sep4"
            android:id="@+id/help">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/helpsupport"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help and Support"
                android:textSize="17sp"
                android:textColor="#DADADA"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/arrow"
                android:layout_marginTop="10dp"
                android:layout_marginStart="195dp" />



        </LinearLayout>
        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:id="@+id/sep5"
            android:layout_below="@+id/help"
            android:layout_marginTop="5dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/sep5"
            android:id="@+id/give">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/feedback"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Give Feed Back"
                android:textSize="17sp"
                android:textColor="#DADADA"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/arrow"
                android:layout_marginTop="10dp"
                android:layout_marginStart="210dp" />



        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
